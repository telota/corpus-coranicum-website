{
  "extends": "stylelint-config-recommended",
  "ignoreFiles": "./node_modules/",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "tailwind",
          "layer",
          "apply"
        ]
      }
    ],
    "block-no-empty": null,
    "unit-whitelist": [
      "em",
      "rem",
      "s",
      "px",
      "deg"
    ]
  }
}